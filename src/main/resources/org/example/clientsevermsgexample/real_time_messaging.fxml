<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.clientsevermsgexample.RealTimeMessagingController">
    <TextArea fx:id="messagesArea" editable="false" />
    <TextField fx:id="messageInput" promptText="Enter your message..." />
    <Button text="Send" onAction="#sendMessage" />
</VBox>
